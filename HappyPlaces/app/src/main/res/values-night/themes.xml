<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HappyPlaces" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ** Customize your dark theme here. ** -->

        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/rp_900</item>
        <item name="colorPrimary">@color/rp_700</item>
        <item name="colorPrimaryVariant">@color/sob_700</item>
        <item name="colorOnPrimary">@color/pastel_300</item>
        <item name="colorAccent">@color/pastel_500</item>
        <!-- Primary Surface brand color. -->
        <item name="colorPrimarySurface">@color/pastel_400</item>
        <item name="colorSurface">@color/rp_900</item>
        <item name="colorSurfaceVariant">@color/sob_700</item>
        <item name="colorOnPrimarySurface">@color/pastel_300</item>
        <item name="colorOnSurface">@color/pastel_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sob_700</item>
