<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/progress_bar_container_padding">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_marginStart="@dimen/progress_bar_text_marginStartEnd"
        android:layout_marginEnd="@dimen/progress_bar_text_marginStartEnd"
        android:indeterminate="true"
        app:indicatorColor="?attr/colorAccent" />

    <TextView
        android:id="@+id/global_progress_bar_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/progress_bar_text_marginStartEnd"
        android:gravity="center"
        android:text="@string/please_wait"
        android:textAppearance="?textAppearanceLargePopupMenu"
        android:textColor="?android:textColor"
        android:textSize="@dimen/progress_bar_text_size" />

</LinearLayout>