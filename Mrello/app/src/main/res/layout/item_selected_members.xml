<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_container_user_profile_image"
        android:layout_width="@dimen/item_selected_member_container_size"
        android:layout_height="@dimen/item_selected_member_container_size"
        android:padding="@dimen/item_selected_member_container_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile_image"
            android:layout_width="@dimen/thumbnail_image_size_tiny"
            android:layout_height="@dimen/thumbnail_image_size_tiny"
            android:backgroundTint="?attr/colorControlNormal"
            android:contentDescription="@string/profile_pic_thumbnail"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_add_circle_24"
            app:civ_border_color="?android:textColor"
            app:civ_border_width="@dimen/thumbnail_tiny_border_width"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>